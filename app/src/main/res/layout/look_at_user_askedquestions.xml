<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/goBackButtonTrending"
        android:layout_width="160dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="24dp"
        android:background="@drawable/backarrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/asked1"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="."
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topicButton" />

    <TextView
        android:id="@+id/asked2"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="."
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/asked1"
        app:layout_constraintBottom_toTopOf="@id/asked3"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="228dp" />

    <TextView
        android:id="@+id/asked3"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="."
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/asked1"
        app:layout_constraintBottom_toTopOf="@id/asked5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="374dp" />

    <TextView
        android:id="@+id/asked4"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="."
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/asked3"
        app:layout_constraintBottom_toTopOf="@id/asked5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="500dp" />

    <TextView
        android:id="@+id/asked5"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="."
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/goBackButtonTrending"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="624dp" />

    <Button
        android:id="@+id/scrollUpQA"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/up"
        tools:layout_editor_absoluteX="499dp"
        tools:layout_editor_absoluteY="567dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/asked4"/>

    <Button
        android:id="@+id/scrollDownQA"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/down"
        tools:layout_editor_absoluteX="497dp"
        tools:layout_editor_absoluteY="651dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/asked5"/>


    <TextView
        android:id="@+id/userNameUser"
        android:layout_width="428dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:text="User Profile"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/topicButton"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:text="Topics"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="161dp"
        app:layout_constraintTop_toBottomOf="@id/bioViewUser"
        app:layout_constraintRight_toLeftOf="@id/savedQuestionButton"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/savedQuestionButton"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:text="Questions Asked"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="161dp"
        app:layout_constraintLeft_toRightOf="@id/topicButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bioViewUser"/>

    <TextView
        android:id="@+id/bioViewUser"
        android:layout_width="564dp"
        android:layout_height="45dp"
        android:text="Bio"
        android:gravity="center"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="83dp"
        app:layout_constraintTop_toBottomOf="@id/userNameUser"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>