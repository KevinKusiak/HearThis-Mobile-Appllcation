<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/goBackButtonTrending"
        android:layout_width="160dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="24dp"
        android:background="@drawable/backarrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/topicButton"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:text="Topics"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="161dp"
        app:layout_constraintTop_toBottomOf="@id/bioViewUser"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/savedQuestionButton"/>


    <TextView
        android:id="@+id/userNameUser"
        android:layout_width="428dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:text="User Profile"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkSaxophonesUser"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:text="Saxophones"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="412dp"
        tools:layout_editor_absoluteY="584dp"
        app:layout_constraintTop_toBottomOf="@id/checkRhythmSectionUser"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/checkTrumpetsUser"/>


    <CheckBox
        android:id="@+id/checkTrumpetsUser"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:text="Trumpets"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="583dp"
        app:layout_constraintTop_toBottomOf="@id/checkClassicJazzUser"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <CheckBox
        android:id="@+id/checkTrombonesUser"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:text="Trombones"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="583dp"
        app:layout_constraintTop_toBottomOf="@id/checkJazzMusiciansUser"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/checkTrumpetsUser"
        />

    <CheckBox
        android:id="@+id/checkRhythmSectionUser"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:text="Rhythm Section"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="412dp"
        tools:layout_editor_absoluteY="424dp"
        app:layout_constraintTop_toTopOf="@id/checkJazzFunkUser"
        app:layout_constraintBottom_toBottomOf="@id/checkSaxophonesUser"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/checkClassicJazzUser"/>

    <CheckBox
        android:id="@+id/checkClassicJazzUser"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:text="Classic Jazz"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="423dp"
        app:layout_constraintTop_toTopOf= "@id/checkHowToUser"
        app:layout_constraintBottom_toBottomOf = "@id/checkTrumpetsUser"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <CheckBox
        android:id="@+id/checkJazzMusiciansUser"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:text="Jazz Musicians"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="423dp"
        app:layout_constraintBottom_toBottomOf = "@id/checkTrombonesUser"
        app:layout_constraintTop_toTopOf = "@id/checkJazzCollegesUser"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/checkClassicJazzUser"/>

    <CheckBox
        android:id="@+id/checkJazzCollegesUser"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:text="Jazz Colleges"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="282dp"
        app:layout_constraintBottom_toBottomOf = "@id/checkJazzMusiciansUser"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/checkHowToUser"/>

    <CheckBox
        android:id="@+id/checkHowToUser"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:text="How-To Jazz"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="281dp"
        app:layout_constraintBottom_toBottomOf="@id/checkClassicJazzUser"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <CheckBox
        android:id="@+id/checkJazzFunkUser"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:text="Jazz Funk"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="412dp"
        tools:layout_editor_absoluteY="281dp"
        app:layout_constraintBottom_toBottomOf = "@id/checkRhythmSectionUser"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/checkHowToUser"/>

    <Button
        android:id="@+id/savedQuestionButton"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:text="Questions Asked"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="161dp"
        app:layout_constraintLeft_toRightOf="@id/topicButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bioViewUser"/>

    <TextView
        android:id="@+id/bioViewUser"
        android:layout_width="564dp"
        android:layout_height="45dp"
        android:text="Bio"
        android:gravity="center"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="83dp"
        app:layout_constraintTop_toBottomOf="@id/userNameUser"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>